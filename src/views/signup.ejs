<% include main %>
<div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Registrarse</h3>
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">

                        <div class="form-group">
                            <input type="name" name="name" placeholder="Nombre" class="form-control">
                        </div>        
                        <div class="form-group">
                            <input type="name" name="apellidos" placeholder="Apellidos" class="form-control">
                        </div>        
                        <div class="form-group">
                            <input type="name" name="empresa" placeholder="Empresa" class="form-control">
                        </div>        
                        <div class="form-group">
                            <input type="email" name="email" placeholder="Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Password" class="form-control">
                        </div>             

                        <button type="submit" class="btn btn-primary btn-block mt-4">
                            Registrarse
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>