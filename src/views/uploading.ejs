            <div class="form-group">
                <input type="red" name="red" placeholder="Estructura de la Red" class="form-control">
            </div>      
            <div class="form-group">
                <input type="hornos" name="hornos" placeholder="Numero de Hornos" class="form-control">
            </div>
            <div class="form-group">
